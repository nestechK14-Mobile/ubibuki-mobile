{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": ".",
    "jsx": "react",
    "skipLibCheck": false,
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js"]
}
